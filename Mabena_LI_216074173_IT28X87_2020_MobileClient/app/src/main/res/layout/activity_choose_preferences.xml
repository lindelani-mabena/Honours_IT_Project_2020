<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosePreferences">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="421dp"
        android:layout_height="594dp"

        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="298dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
          />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="566dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbFeMales"

                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="@string/occupy_male" />

                <RadioButton
                    android:id="@+id/rbMales"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rbMales"
                    android:layout_toRightOf="@id/rbMales"
                    android:text="@string/occupy_female" />

            </LinearLayout>
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbSharingRooms"

                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="@string/single_room" />

            <RadioButton
                android:id="@+id/rbSingleRooms"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/rbSingleRooms"
                android:layout_toRightOf="@id/rbSingleRooms"
                android:text="@string/sharing_room" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rbGym"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/need_gym" />

        <RadioButton
            android:id="@+id/rbWifi"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/need_free_wifi" />

        <RadioButton
            android:id="@+id/rbWashingMachines"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/need_washing_machines" />

        <RadioButton
            android:id="@+id/rbParkingLots"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/need_parking" />

        <RadioButton
            android:id="@+id/rbShuttles"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
       />

        <RadioButton
            android:id="@+id/rbSecurity"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/need_security" />


        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#0275D8"
                android:text="Choose" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_toStartOf="@id/btnChoose"
                android:layout_toLeftOf="@id/btnChoose"
                android:background="#F43636"
                android:text="Cancel" />


        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>